---
import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";

import Pagination from "@/components/Paginator.astro";
import PeoplePreview from "@/components/people/PeoplePreview.astro";
import { getAllPeople } from "@/data/people";
import {
	alumniSection,
	mastersVisitingSection,
	undergraduateSection,
} from "@/data/peopleSections";
import PageLayout from "@/layouts/Base.astro";

export const getStaticPaths = (async ({ paginate }) => {
	const MAX_POSTS_PER_PAGE = 10;
	const allPeople = await getAllPeople();
	return paginate(allPeople, { pageSize: MAX_POSTS_PER_PAGE });
}) satisfies GetStaticPaths;

interface Props {
	page: Page<CollectionEntry<"people">>;
}

const { page } = Astro.props;

const meta = {
	description: "Read my collection of people material",
	title: "People",
};

const paginationProps = {
	...(page.url.prev && {
		prevUrl: {
			text: `← Previous Page`,
			url: page.url.prev,
		},
	}),
	...(page.url.next && {
		nextUrl: {
			text: `Next Page →`,
			url: page.url.next,
		},
	}),
};
---
<PageLayout meta={meta}>
	<h1 class="title mb-6">People</h1>
	<div class="grid gap-y-16 sm:gap-x-8">
		<section aria-label="Blog people list">
			<ul class="mb-8 mt-6 space-y-8 text-start">
				{page.data.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr] sm:[&_q]:col-start-2">
						<PeoplePreview people={p} />
					</li>
				))}
			</ul>
			<Pagination {...paginationProps} />
		</section>
			<section class="mt-12 space-y-6">
				<h2 class="title text-2xl">Masters & Visiting Students</h2>
				<ul class="space-y-2 text-lg text-slate-900 dark:text-slate-100">
					{mastersVisitingSection.map((person) => (
						<li class="flex flex-col">
							<span>{person.name}</span>
							{person.note && (
								<span class="text-sm text-slate-500 dark:text-slate-300">
									{person.note}
								</span>
							)}
						</li>
					))}
				</ul>
			</section>
			<section class="mt-8 space-y-6">
				<h2 class="title text-2xl">Undergraduates</h2>
				<ul class="space-y-2 text-lg text-slate-900 dark:text-slate-100">
					{undergraduateSection.map((person) => (
						<li class="flex flex-col">
							<span>{person.name}</span>
							{person.note && (
								<span class="text-sm text-slate-500 dark:text-slate-300">
									{person.note}
								</span>
							)}
						</li>
					))}
				</ul>
			</section>
			<section class="mt-8 space-y-6 pb-6">
				<h2 class="title text-2xl">Alumni</h2>
				<ul class="space-y-2 text-lg text-slate-900 dark:text-slate-100">
					{alumniSection.map((person) => (
						<li class="flex flex-col">
							<span>{person.name}</span>
							{person.note && (
								<span class="text-sm text-slate-500 dark:text-slate-300">
									{person.note}
								</span>
							)}
						</li>
					))}
				</ul>
			</section>
	</div>
</PageLayout>
