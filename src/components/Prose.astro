---
type Props = {
	headingMarkings?: boolean;
    toc?: boolean;
};

const { headingMarkings = false, toc = false } = Astro.props;
---

<div
	class=`prose prose-sm prose-cactus mt-12 prose-headings:font-semibold prose-headings:text-accent-2 ${headingMarkings ? "prose-headings:before:absolute prose-headings:before:-ms-4 prose-headings:before:text-accent prose-headings:before:content-['#']" : ""} prose-th:before:content-none`
>
	<slot />
</div>
